{
    "title": "Light Dict",
    "name": "lightdict",
    "version": "0.3.0-testing",
    "description": "英単語を辞書サイトで検索してポップアップ表示します。",
    "author": "microwaver17",
    "homepage": "http://mw17.hatenablog.jp/entry/software/lightdict",
    "icon": "resource://@lightdict/data/icon-dict-48.png",
    "license": "MIT",
    "main": "index.js",
    "engines": {
      "firefox": ">=38.0a1 <=52.0a1"
    },

    "preferences": [
        {
            "type": "control",
            "label": "開く",
            "name": "openInformation",
            "title": "検索履歴"
        },
        {
            "name": "site_1",
            "title": "1つめの辞書",
            "type": "menulist",
            "value": "weblio",
            "options": [
                {"value": "weblio", "label": "Weblio"},
                {"value": "goo", "label": "goo辞書"},
                {"value": "kotobank", "label": "コトバンク"},
                {"value": "urbandic", "label": "Urban Dictionary"}
            ]
        },
        {
            "name": "trigger_1",
            "title": "1つめの検索キー",
            "type": "menulist",
            "value": "Shift",
            "options": [
                {"value": "Control", "label": "Controlキー"},
                {"value": "Shift", "label": "Shiftキー"},
                {"value": "Alt", "label": "Altキー"},
                {"value": "Meta", "label": "Metaキー"},
                {"value": "OS", "label": "OSキー"}
            ]
        },
        {
            "name": "use_2",
            "title": "2つめの辞書を使用する",
            "type": "bool",
            "value": false
        },
        {
            "name": "site_2",
            "title": "2つめの辞書",
            "type": "menulist",
            "value": "weblio",
            "options": [
                {"value": "weblio", "label": "Weblio"},
                {"value": "goo", "label": "goo辞書"},
                {"value": "kotobank", "label": "コトバンク"},
                {"value": "urbandic", "label": "Urban Dictionary"}
            ]
        },
        {
            "name": "trigger_2",
            "title": "2つめの検索キー",
            "type": "menulist",
            "value": "Shift",
            "options": [
                {"value": "Control", "label": "Controlキー"},
                {"value": "Shift", "label": "Shiftキー"},
                {"value": "Alt", "label": "Altキー"},
                {"value": "Meta", "label": "Metaキー"},
                {"value": "OS", "label": "OSキー"}
            ]
        },
        {
            "name": "panel_width",
            "title": "ポップアップパネル 幅",
            "type": "integer",
            "value": 300,
            "hidden": false
        },
        {
            "name": "panel_height",
            "title": "ポップアップパネル 高さ",
            "type": "integer",
            "value": 300,
            "hidden": false
        }
    ]
}
